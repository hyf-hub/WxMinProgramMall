.paramInfo{
  display: flex;
  padding: 35rpx;
  font-size: 30rpx;
  color: #57606f;
  flex-direction: column;
}
.top{
  display: flex;
  flex-direction: column;
}
.flex1{
  flex: 1;
}
.topitem{
  display: flex;
  align-items: center;
}
.topitem>view:last-child{
  transform: translateX(-30%);
}
.bottom{
  display: flex;
  flex-direction: column;
}
.sizeitem{
  display: flex;
}
.sizeitem>view:first-child {
  color: #3742fa;
  text-align: left;
}
.pink{
  text-align: center;
  color: #ff5777;
}